<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:layout_marginTop="5dp"
    android:padding="5dp"
    app:cardCornerRadius="8dp"
    app:contentPadding="5dp"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:orientation="vertical"
        android:padding="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <ImageView
                android:id="@+id/shopImgae"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:contentDescription="@string/image_discription"
                android:scaleType="centerCrop"
                android:src="@drawable/nav_back" />

            <TextView
                android:id="@+id/shopName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/shopImgae"
                android:background="#33000000"
                android:paddingBottom="8dp"
                android:paddingStart="8dp"
                android:paddingTop="8dp"
                android:text="ShopName"
                android:textColor="@color/white"
                android:textSize="22sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/shopType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:padding="4dp"
            android:paddingStart="3dp"
            android:text="ShopType"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/shopInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:padding="4dp"
            android:paddingStart="3dp"
            android:text="ShopInfo"
            android:textSize="15sp" />

        <Button
            android:id="@+id/navigateBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:elevation="5dp"
            android:text="Navigate"
            android:textColor="@color/amber_600" />

    </LinearLayout>

</android.support.v7.widget.CardView>